<div class="center">
  <div class="row">
   <% @listings.each do |listing| %>
     <div class="col-md-3">

        <div class="thumbnail">
        <!-- create links from listed images-->
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price, :unit => "Â£") %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
            <% if (signed_in?) && (current_user == listing.user) %>
             <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link"  %>
             <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %>
            <% end %>
          </div>
        </div>

      </div>     
    <% end %>
  </div>
</div>

<br>
<% if signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>